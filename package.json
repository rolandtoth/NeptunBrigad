{
  "name": "neptunbrigad",
  "version": "1.1.0",
  "description": "Neptun Brigad static website",
  "author": "Roland Toth",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rolandtoth/NeptunBrigad.git"
  },
  "scripts": {
    "imgResize": "node scripts/imgResize",
    "imgMin": "node scripts/imgMin",
    "buildSite": "npx eleventy",
    "build:css": "node-sass --include-path src/scss/includes src/scss/style.scss | postcss --use autoprefixer -b \"last 2 versions\" --use cssnano --no-map > assets/styles/style.css",
    "build:cssdev": "node-sass --include-path src/scss/includes src/scss/style.scss assets/styles/style.css",
    "lint": "jshint src/js/main.js",
    "build:js": "uglifyjs src/js/main.js -o assets/scripts/main.js",
    "build:jsdev": "cpx src/js/main.js assets/scripts/",
    "build": "npm run build:css && npm run build:js",
    "prebuild:js": "npm run lint",
    "watch:css": "onchange \"src/scss/*.scss\" -- npm run build:css",
    "watch:cssdev": "onchange \"src/scss/*.scss\" -- npm run build:cssdev",
    "watch:js": "onchange \"src/js/*.js\" -- npm run build:js",
    "watch:jsdev": "onchange \"src/js/*.js\" -- npm run build:jsdev",
    "watch": "parallelshell \"npm run watch:css\" \"npm run watch:js\"",
    "watch:dev": "parallelshell \"npm run watch:cssdev\" \"npm run watch:jsdev\""
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.7.1",
    "autoprefixer": "^9.7.3",
    "cpx": "^1.5.0",
    "cssnano": "^4.1.10",
    "del": "^3.0.0",
    "get-video-id": "^3.1.4",
    "glob": "^7.1.6",
    "html-minifier": "^3.5.20",
    "image-downloader": "^3.5.0",
    "image-size": "^0.6.3",
    "imagemin": "^6.0.0",
    "imagemin-jpegtran": "^5.0.2",
    "imagemin-mozjpeg": "^7.0.0",
    "imagemin-pngquant": "^6.0.0",
    "jshint": "^2.10.3",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.13.0",
    "onchange": "^5.2.0",
    "parallelshell": "github:darkguy2008/parallelshell#8fd83e2",
    "path": "^0.12.7",
    "postcss": "^7.0.24",
    "postcss-cli": "^6.1.3",
    "sharp": "^0.20.7",
    "uglify-js": "^3.7.2",
    "video-thumbnail-url": "^1.0.1"
  }
}