{% set pages = (collections.news | activePage).slice(0, 6) %}
{% if pages.length %}
<div class="news-slider-wrap">
    <div id="news-slider">
        {% for page in pages %}
            <div class="news-slider__slide">
                <div class="content">
                    <div class="news-slider__text">
                        <div>
                            <div class="news-slider__title">
                                {# <p class="breadcrumb">
                                    <a href="{{ '/hirek/' | url }}">HÃ­rek</a>
                                </p> #}
                                {% set url = (page.url | url) %}
                                <h2><a href="{{ url }}">{{ page.data.title }}</a></h2>
                                {% if page.data.subtitle %}
                                    <p class="subtitle">{{ page.data.subtitle }}</p>
                                {% endif %}
                            </div>
                            {%if page.data.excerpt %}
                                <p>{{ page.data.excerpt | truncate(400, true) }}</p>
                            {%endif %}
                            <p class="readmore-wrap"><a href="{{ url }}" class="readmore"></a></p>
                        </div>
                    </div>

                    {% set imgVariant = page.data.img | postImage("news", "news") %}
                    <div class="news-slider__img" style="background-image: url('{{ imgVariant | url | cacheVersion }}')"></div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endif %}
